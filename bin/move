#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
def input_to_index(user_input)
  "#{user_input}".to_i - 1
end

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
def update_array_at_with(array, index, value = "X")
  array[index] = value
end

update_array_at_with(board, 0, "Red")
